SELECT IF(T_1.EXIST = 0 AND T_2.IT_EXIST > 0 AND T_3.FT_EXIST > 0 AND T_4.FT_EXIST > 0 ,"OK","NOK") 
FROM
(SELECT COUNT(*) EXIST FROM MON.SPARK_FT_DATAMART_OM_MARKETING_OLD WHERE JOUR='###SLICE_VALUE###') T_1,
(SELECT COUNT(*) IT_EXIST FROM CDR.SPARK_IT_OMNY_TRANSACTIONS WHERE TRANSFER_DATETIME='###SLICE_VALUE###') T_2,
(SELECT COUNT(*) FT_EXIST FROM MON.SPARK_FT_CLIENT_SITE_TRAFFIC_DAY WHERE EVENT_DATE='###SLICE_VALUE###') T_3,
(SELECT COUNT(*) FT_EXIST FROM MON.SPARK_FT_CLIENT_LAST_SITE_DAY WHERE EVENT_DATE='###SLICE_VALUE###') T_4
