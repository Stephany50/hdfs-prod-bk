SELECT IF(FT_SDT_OM = 0 AND IT_OMNY_SUBS > 0 AND IT_OMNY_TRANS > 0, 'OK','NOK') FROM
(SELECT COUNT(*) FT_SDT_OM FROM MON.SPARK_FT_SDT_OM WHERE DATE_INSCRIPT='###SLICE_VALUE###') A,
(SELECT COUNT(*) IT_OMNY_SUBS FROM CDR.SPARK_IT_OM_SUBSCRIBERS WHERE REGISTERED_ON BETWEEN SUBSTR('###SLICE_VALUE###', 0, 7) || '-01 00:00:00' AND DATE_ADD('###SLICE_VALUE###', 1) || '00:00:00') B,
(SELECT COUNT(*) IT_OMNY_TRANS FROM CDR.SPARK_IT_OMNY_TRANSACTIONS WHERE TRANSFER_DATETIME BETWEEN SUBSTR('###SLICE_VALUE###', 0, 7) || '-01 00:00:00' AND DATE_ADD('###SLICE_VALUE###', 1) || '00:00:00') C
